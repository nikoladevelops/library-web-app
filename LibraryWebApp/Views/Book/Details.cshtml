@model BookDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
        <input type="hidden" asp-for="DefaultCoverImageUrl" />
        <img src="@(Model.CoverImageUrl == null ? Model.DefaultCoverImageUrl : Model.CoverImageUrl)" alt="Cover Image" width="300" height="300" />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PublicationDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationDate.ToString(Globals.DateFormat)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AvailableCount"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.AvailableCount
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TotalCount"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TotalCount
        </dd>
    </dl>
</div>

<br />

<div>
    <a asp-controller="Home" asp-action="Index">Browse Books</a>
</div>

<br />
@if (@User.Identity.IsAuthenticated)
{
    <form asp-controller="BookRentals" asp-action="Rent">
        <input type="hidden" name="bookId" value="@Model?.Id" />
    
        <p>You can keep the book for @Globals.BookRentDayLimit days max</p>
        <p>Return date: @DateOnly.FromDateTime(DateTime.Now).AddDays(Globals.BookRentDayLimit).ToString(Globals.DateFormat)</p>

        <div class="form-group" style="margin-top:10px">
            <input type="submit" value="Rent Book" class="btn btn-primary" @(Model.AvailableCount == 0 ? "disabled" : "") />
            @if (Model.AvailableCount == 0)
            {
                <p>No available copies left, please come back later</p>
            }
        </div>
    </form>
}

