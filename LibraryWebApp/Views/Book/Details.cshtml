@model Book
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Details";
    var userId = UserManager.GetUserId(User);
}
<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
        <img src="@(Model.CoverImageUrl == null ? ViewData["NoBookCoverImage"] : Model.CoverImageUrl)" alt="Cover Image" width="300" height="300" />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PublicationDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationDate.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AvailableCount"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.AvailableCount
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TotalCount"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TotalCount
        </dd>
    </dl>
</div>

<br />

<div>
    <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    <a asp-controller="Book" asp-action="Index">Back to List</a>
</div>

<br />
@if (@User.Identity.IsAuthenticated)
{
    
<form asp-controller="Account" asp-action="Rent" method="get">
    <input type="hidden" name="userId" value="@userId" />
    <input type="hidden" name="bookId" value="@Model?.Id" />
    
    <p>You can keep the book for @Globals.BookRentDayLimit days max</p>
    <p>Return date: @DateOnly.FromDateTime(DateTime.Now).AddDays(Globals.BookRentDayLimit)</p>

    <div class="form-group" style="margin-top:10px">
        <input type="submit" value="Rent Book" class="btn btn-primary" />
    </div>
</form>
}

