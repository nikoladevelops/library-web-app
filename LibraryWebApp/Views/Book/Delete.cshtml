@model BookDeleteVM

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Book</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Book" asp-action="Delete" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DefaultCoverImageUrl" />

            <div class="form-group" style="max-width: 300px;">
                <label class="control-label">Cover Image</label>

                <div class="card border border-primary rounded">
                    <div class="card-img-container" style="width: 100%; height: 250px; display: flex; justify-content: center; align-items: center; overflow: hidden; background-color: #f8f9fa;">
                        <img src="@(Model.CoverImageUrl ?? Model.DefaultCoverImageUrl)"
                             style="max-width: 100%; max-height: 100%; object-fit: scale-down;"
                             alt="Book Cover">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label"></label>
                <input asp-for="PublicationDate" class="form-control" type="date" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TotalCount" class="control-label"></label>
                <input asp-for="TotalCount" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="AvailableCount" class="control-label"></label>
                <input asp-for="AvailableCount" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="SelectedGenreIDs" class="control-label"></label>
                <select asp-for="SelectedGenreIDs" asp-items="@Model.AvailableGenres" class="form-select" multiple disabled>
                </select>
                <span asp-validation-for="SelectedGenreIDs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedAuthorIDs" class="control-label"></label>
                <select asp-for="SelectedAuthorIDs" asp-items="@Model.AvailableAuthors" class="form-select" multiple disabled>
                </select>
                <span asp-validation-for="SelectedAuthorIDs" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>