@model Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <img src="@(Model.CoverImageUrl == null ? ViewData["NoBookCoverImage"] : Model.CoverImageUrl)" alt="Cover Image" width="300" height="300" />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PublicationDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationDate.ToString(Globals.DateFormat)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AvailableCount"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.AvailableCount
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TotalCount"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TotalCount
        </dd>
    </dl>

    <form asp-controller="Book" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Book" asp-action="Index">Back to List</a>
    </form>
</div>
