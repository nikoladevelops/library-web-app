@model Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Genre" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Go To Edit</a>
    <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary">Manage Genres</a>
</div>
